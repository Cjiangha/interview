@import '../iconfont.wxss';

/* 最大盒子 */
.header-title {
  height: 100%;
  background-color: rgb(0,178,255);
}

/* 状态栏 */
.title-bar {
  position: relative;
  width: 100%;
  height: 88rpx;
}

.left-iconContent{
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/*  */
.homePage {
  width: 56rpx;
  height: 56rpx;
  /* margin-top: 22rpx; */
  transform: translateY(50%);
  margin-left: 32rpx;
  background: url(https://qiniu-image.qtshe.com/20190320home1.png) no-repeat center center;
  background-size: 100% 100%;
}

/* 导航中间的字体 */
.title {
  width: calc(100% - 330rpx);
  position: absolute;
  text-align: center;
  width: calc(100% - 340rpx);
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  cursor: none;
  pointer-events: none;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* 文字 */
.cu-custom .cu-bar .border-custom .citem .text {
  display: flex;
  flex: 1;
  margin: auto !important;
  text-align: center;
  font-size: 34rpx;
  justify-content: center;
  align-items: center;
}

/* home 和 按钮 组合*/
.home-btn-com{
  display: flex;
    align-items: center;
    height: 100%;
    justify-content: center;
    max-width: 100%;
}

.citem{
  border-radius: 35rpx 0  0  35rpx;
  border: 2rpx solid black;
  opacity: 0.1;
}

.home-icon{
  border-radius:  0  35rpx  35rpx 0;
  border: 1px solid black;
  opacity: 0.1;
}

.text{
  display: flex;
  flex: 1;
  margin: auto !important;
  text-align: center;
  font-size: 34rpx;
  justify-content: center;
  align-items: center;
}

/* 省市 */
.place{
  display: flex;
  border-left: 2rpx solid black;
  border-radius:  35rpx;
  border: 1px solid white;
  background-color: rgb(38, 189, 255);
}

.place .placetext{
  font-size: 24rpx;
  color: white;
}

.place text{
  display: flex;
  align-items: center;
  font-size: 10px;
  font-weight: 100;
  color: white;
  z-index: 1;
  margin-right: 40rpx;
}

