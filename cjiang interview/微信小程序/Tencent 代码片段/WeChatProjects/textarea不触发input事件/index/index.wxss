/* pages/idleReleaseSub/idleReleaseSub.wxss */
page{
  width: 100vw;
	min-height: 100vh;
	position: relative;
	overflow-x: hidden;
	background-color: #f5f5f5;
	padding: 20rpx 20rpx 66rpx 20rpx;
	box-sizing: border-box;
}
.idle-release-sub{
  padding:36rpx 40rpx 180rpx 40rpx;
  box-sizing: border-box;
	background-color: white;
  margin-bottom: 64rpx;
  border-radius: 12rpx;
}
.idle-release-sub .header{
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}
/* 标签 */
.tag .tag-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 41rpx;
  margin-bottom: 9rpx;
}
.tag-header .edit{
  font-weight: 400;
  color: #999999;
}
.tag .tag-list{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.tag .tag-list-item{
  display: flex;
  align-items: center;
  background-color: #ffffff;
  color: #90a832;
  font-size: 26rpx;
  padding: 0 14rpx;
  height: 44rpx;
  border-radius: 8rpx;
  line-height: 44rpx;
  margin: 10rpx 6rpx;
  border-width: 2rpx;
  border-style: solid;
  border-color: #90a832;
  vertical-align: middle;
}
.tag .tag-list-item .del-img{
  width: 24rpx;
  height: 24rpx;
  margin-left: 12rpx;
}
.tag .tag-list .add-img{
  width: 52rpx;
  height: 52rpx;
  margin-left: 28rpx;
}
/* 详细信息 */
.desc .desc-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 41rpx;
  margin-bottom: 9rpx;
}
.desc .desc-text{
  background-color: #F6F6F6;
	font-size: 24rpx;
	color: #aeaeae;
	height: 320rpx;
	font-weight: 400;
	position: relative;
	width: 100%;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 19rpx 22rpx;
}
.desc .desc-text .desc-text-limit{
  position: absolute;
  right: 22rpx;
  bottom: 19rpx;
}
/* 联系方式 */
.contact-way{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 41rpx;
  margin-bottom: 9rpx;
}
.contact-way label{
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
}
.contact-way radio{
  transform: scale(0.8);
}

.submitBtn {
	width: 680rpx;
  height: 92rpx;
  margin: auto;
	background-color: #90A832;
	color: #fff;
	line-height: 92rpx;
	text-align: center;
	border-radius: 46rpx;
  /* position: fixed; */
  margin-top: 72rpx;
	bottom: 60rpx;
	font-size: 28rpx;
}
::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}
