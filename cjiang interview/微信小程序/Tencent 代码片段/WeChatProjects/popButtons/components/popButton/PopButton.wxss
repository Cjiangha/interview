.hide {
  opacity: 0;
}
.parent-button {
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center; 
  position: fixed;
  top:0;
  left:0;
  z-index: 2;
}
.child-button {
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center; 
  position: absolute;
  top:1;
  left:1;
  z-index: 1;
  transition: transform .2s;
  transform: scale(0.8);
}
.button-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #ffffff;
  transform-style: preserve-3d;
  position: relative;
  z-index: 2;
}