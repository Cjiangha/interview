<view style="width:{{phoneWidth}}px;;height:{{phoneHeight}}px;">
    <live-pusher
        url="rtmp://192.168.2.110:1935/live/text"
        mode="RTC"
        autopush
        bindstatechange="statechange"
        style="width:100%;height: 100%;"
    >
    <cover-view style="padding: 10px;margin-top: 100px;background-color: cyan;" bindtap="startDM">开启弹幕</cover-view>
    
    <cover-view  style="padding: 10px;margin-top: 20px;background-color: brown;" bindtap="stopDm">关闭弹幕</cover-view>
        <!-- 弹幕 -->
			<cover-view style="position: fixed;bottom: 0;">
				<cover-view class="barrage" id="message-items" scroll-top="{{scrollTop}}px" >
					<cover-view class="barrageItem"
                        wx:for="{{msgList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
						<cover-view  class="{{item.barrageIcon == '铁粉'? 'barrageIcon ironBarrageIcon':'barrageIcon newBarrageIcon'}}">
                            {{item.barrageIcon}}
						</cover-view>
						<cover-view class="barrageName">{{item.barrageName}}：</cover-view>
						<cover-view class="barrageContent">{{item.barrageContent}}</cover-view>
						<cover-view class="barrageMoreContent" wx:if="{{item.barrageMoreContent}}">
							{{item.barrageMoreContent}}
						</cover-view>
					</cover-view>
				</cover-view>
			</cover-view>




    </live-pusher>
</view>