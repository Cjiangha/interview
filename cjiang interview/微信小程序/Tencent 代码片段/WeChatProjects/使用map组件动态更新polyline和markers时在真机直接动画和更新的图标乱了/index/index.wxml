  id="map" 
  longitude="{{longitude}}" 
  latitude="{{latitude}}" 
  scale="16" 
  markers="{{markers}}" 
  polyline="{{polyline}}" 
  enable-zoom="{{zoom}}" 
  enable-scroll="{{scroll}}" 
  enable-poi="{{poi}}" 
  enable-building="{{building}}" 
  enable-satellite="{{satellite}}" 
  show-location 
  style="width: 100%; height: 100vh;"></map>
</view>