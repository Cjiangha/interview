.root {
    background-color: #F7F7F9;
    min-height: 100%;
}

.special-btn {
    position: relative;
    top: 25rpx;
    display: inline-block;
    margin-left: auto;
    margin-right: auto;
    padding: 10rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    text-align: center;
    text-decoration: none;
    line-height: 32rpx;
    border-radius: none;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: rgba(255,255,255,0.5);
    background-color: transparent;
    border-style: none;
}

.user-info {
    margin: 30rpx 30rpx;
    border-radius: 15rpx;
    height: 180rpx;
    background-image: linear-gradient(to right,#2D6DF3,#C6D7FC);
}

.info-content {
    padding: 30rpx;
    position: relative;
}

.user-logo {
    display: inline-block;
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
    margin-right: 30rpx;
    overflow: hidden;
}

.empty-logo {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
}

.user-name {
    display: inline-block;
    position: relative;
    top: -60rpx;
    font-size: 32rpx;
    color: rgba(255,255,255,0.5);
}

.user-rates {
    position: absolute;
    top: 100rpx;
    left: 175rpx;
    padding: 10rpx 30rpx;
    background: rgb(0,102,51);
    border-radius: 20rpx;
    color: #fff;
    font-size: 30rpx;
    line-height: 30rpx;
}

.setting {
    display: inline-block;
    width: 200rpx;
    height: 200rpx;
}

.set-image {
    width: 50rpx;
    height: 50rpx;
}

.user-item {
    padding: 0 30rpx;
    background: #fff;
    border-radius: 15rpx;
    overflow: hidden;
    margin: 30rpx 20rpx 0 20rpx;
    box-shadow: 0rpx 5rpx 20rpx 0rpx #C6CAD3;
}

.user-loan {
    height: 110rpx;
    background: #fff;
    border-bottom: 1rpx solid#DBE6EE;
}

.user-invite {
    height: 120rpx;
    background: #fff;
}

.set-image {
    height: 52rpx;
    width: 52rpx;
    display: inline-block;
    margin-top: 34rpx;
    float: left;
}

.set-image-phone {
    height: 52rpx;
    width: 52rpx;
    display: inline-block;
    margin-top: 57rpx;
    float: left;
}

.set-item {
    display: inline-block;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    letter-spacing: 0.41rpx;
    line-height: 30rpx;
    float: left;
    margin-left: 20rpx;
    margin-top: 45rpx;
}

.set-arrow {
    float: right;
    height: 48rpx;
    width: 48rpx;
    display: inline-block;
    margin-top: 36rpx;
}

.set-arrow-phone {
    float: right;
    height: 48rpx;
    width: 48rpx;
    display: inline-block;
    margin-top: 59rpx;
}

.user-phone {
    height: 165rpx;
    background: #fff;
}

.phone-set {
    display: inline-block;
    float: left;
    margin-left: 20rpx;
    margin-top: 45rpx;
}

.set-item-phone {
    display: block;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    letter-spacing: 0.41rpx;
    line-height: 30rpx;
}

.set-item-phone-one {
    display: block;
    margin-top: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    letter-spacing: 0.32rpx;
    line-height: 24rpx;
}