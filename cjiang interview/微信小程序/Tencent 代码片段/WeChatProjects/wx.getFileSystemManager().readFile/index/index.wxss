
.upload-img-component {
  width: 100%;
}

.upload-img-component .upload-img-box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.upload-img-component .upload-img-box .item {
  position: relative;
  margin: 0 8px 8px 0;
}

.upload-img-component .upload-img-box .item .img,
.upload-img-component .upload-img-box .item .upload {
  width: 70px;
  height: 70px;
  display: block;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-img-component .upload-img-box .item .img image {
  width: 100%;
  height: 100%;
  display: block;
}



.upload-img-component .upload-img-box .item .upload {
  background: #f5f5f5;
  text-align: center;
}

.upload-img-component .upload-img-box .item .upload text {
  line-height: 70px;
}

.upload-img-component .upload-img-box .item .delete-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 20px;
  height: 20px;
  background: rgba(209, 15, 28, 0.6);
  border-radius: 0 0 0 12px;

}

.upload-img-component .upload-img-box .item .delete-icon text {
  position: absolute;
  top: 0px;
  right: 2px;
  color: white;
  font-size: 16px;
  transform: scale(0.5);
}

.upload-img-component .upload-img-box .upload-file-box {
  position: relative;
}

.upload-img-component .upload-img-box .upload-file-box>.upload-btn {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
}



.upload-file-dialog .dialog-title {
  padding: 10pt;
  border-bottom: 1px solid #e8e8e8;
}

.upload-file-dialog .dialog-body {
  margin: 0 auto;
  width: 80%;
  height: 80pt;
  display: flex;
  padding: 15pt;
}

.upload-file-dialog .dialog-body>view {

  flex: 1;
  box-sizing: border-box;
  width: 60pt;
  height: 60pt;
}

.upload-file-dialog .dialog-body>view image {
  width: 50pt;
  height: 50pt;
}

.upload-file-dialog .dialog-body button {
  height: 35pt;
  line-height: 35pt;
  color: white;
  background: #6190e8;
}

.weui-dialog__hd {
  padding: 32px 24px;
}
