.cates_container {
  height: calc( 100vh - 90rpx );
}
.cates_container .menu {
  background-color: #fff;
  white-space: nowrap;
}
.cates_container .menu .menu_item {
  display: inline-block;
  height: 60rpx;
  justify-content: center;
  text-align: center;
  font-size: 35rpx;
}
.cates_container .menu .active {
  color: rgb(172, 14, 14);
  border-bottom: 3rpx solid rgb(160, 9, 9);
}
.cates_container .content {
  margin-top: 10rpx;
  background-color: #fff;
  height: calc( 100vh - 175rpx );
}
.cates_container .content .groupList {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  padding-top: 30rpx;
}
.cates_container .content .groupList .groupList_item {
  width: 50%;
  height: 200rpx;
  text-align: center;
  margin-bottom: 72rpx;
}
.cates_container .content .groupList .groupList_item image {
  width: 80%;
  height: 100%;
}
.cates_container .content .groupList .groupList_item .name {
  font-size: 32rpx;
}
.cates_container .content .loadmore {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  background-color: #fafafa;
}
.cates_container .content .loadmore .iconfont {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates_container .content .nomore {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  color: #696969;
}