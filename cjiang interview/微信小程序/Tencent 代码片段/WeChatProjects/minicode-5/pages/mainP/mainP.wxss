}
.conic-progress {
  /* margin: 100rpx auto; */
  position: relative;
  /* width: 200rpx;
  height: 150rpx; */
  border-radius: 50%;
  margin-top: 20%; 
  height: 178rpx; 
  width: 178rpx; 
  /* background-image: conic-gradient(white var(--battery)%,green 0%,#5cc6ba 30%,#ffdc62 50%,#eb4b4d 100%);  */
  text-align: center; 
  display: block; 
  box-sizing: border-box; 
  left: -3rpx; 
  top: -36rpx; 
  position: relative; 
  padding: 15% 15% 15% 15%
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  top: 90%;
}
.conic-progress::before {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  height: 85%;
  border-radius: 50%;
  background-color: #fff;
}

.progress-value {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  font-weight: bolder;
  color: green;
}