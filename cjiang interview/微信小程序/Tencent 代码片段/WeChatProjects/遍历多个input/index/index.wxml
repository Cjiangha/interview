

<view class=' flex-column-center' style="height: 800rpx; background-color: rgb(241, 250, 209);">

  <view class=' flex-column-center' style="height: 400rpx; ">
    <view class="ying" style="font-size: 70rpx; ">
      <text>{{taskData[taskIndex].ying}}</text>
    </view>
    <view class="flex-row-wrap">
      <view class=" flex-row" wx:for="{{taskData[taskIndex].ying}}">
        <input class="input flex-row line" bindinput="getType" data-index="{{index}}"
          focus="{{typeIndex == index ? 'is-active' :''}}" confirm-hold hold-keyboard="true">
        </input>
      </view>
    </view>

  </view>

  <view class='operation flex-column-center'>
    <view bindtap="next">next</view>
  </view>


</view>