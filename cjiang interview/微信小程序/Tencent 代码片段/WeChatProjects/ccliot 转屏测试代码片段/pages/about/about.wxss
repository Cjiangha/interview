/* pages/about/about.wxss */
.container {height: 100%;display: flex;flex-direction: column;justify-content: space-between;box-sizing: border-box;width: 375rpx;}
.scrolltxt{padding:0 20rpx;background:#f8f8f8;}
.marquee_box {position:relative;color:#333;height:90rpx;display:block;overflow:hidden;} 
.marquee_text {white-space: nowrap;font-size:14px;}
.box{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
}

.txt{
  white-space: nowrap;
  /* overflow-x: scroll; */
}

#txt1{
  position: relative;
  white-space: nowrap;
  overflow: hidden;
  transition: left 1s linear;
}

#txt2,.flex-box{
  position: absolute;
  top: 0;
}

.flex-box{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
}

@keyframes roll {
  0% {left: 750rpx;}
  100% {left: -100%;}
}
.container-bg{
  background-color:#e7e7e7;
  min-height:1080rpx;
  }
.userinfo{
  display:flex;
  flex-direction:column;
  align-items:center;
}
.userinfo-avatar{
  width:186rpx;
  height:186rpx;
  margin-top:60rpx;
  margin-bottom:10rpx;
  border:1px solid #cfcfcf;
  border-radius:50%;
}
.userinfo-nickname{
  font-size:30rpx;
  color:rgb(102,102,102);
  margin-bottom:8rpx;
}
.weui-cell_border_left:before{
  left:0!important;
}
.page__bd{
  margin-top:40rpx;
}
.weui-btn-abo{
  background-color:#fff;
  font-size:36rpx;
  color:rgb(51,51,51);
  height:96rpx;
}
.abo-font{
  font-size:36rpx;
  color:rgb(51,51,51);
}
.aboutDialog{
  background-color:#f8f8f8;
}
