
/*头部样式*/
.header{
  width: 100%;
  height: 80rpx;
  background-color: rgb(255,255,255);
  border-bottom: 1px solid #000;
}
.header::after{
  content: "";
  display: block;
  clear: both;
}
.header .nav-btn{
  width: 150rpx;
  height: 100%;
  float: right;
  background-color: rgb(240, 235, 235);
}
.header .nav-btn image{
  width: 100%;
  height: 90%;
  /* filter: invert(100%); */
}
.header .nav {
  width: 90%;
  height: 600rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0,0,0,.5);
  z-index: 9;
  overflow-y: scroll;
  box-shadow: 0 -1rpx 20rpx #000;
  border-radius: 25rpx;
}
.header .nav .li{
  width: 100%;
  height: 100rpx;
  color: #fff;
  opacity: .5;
  font-size:1.3em;
  font-weight: bold;
  background-clip: text;
  background-color: rgba(0,0,0,.5);
  border-bottom: 1px solid rgba(141, 45, 165, .5); 
  text-align: center;
  line-height: 100rpx;
}
/*主体样式*/
.content {
  width: 100%;
  height: 500rpx;
  padding: 0 6rpx;
  position: relative;
  top: 0;
  background-color: #fff;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.content .title {
  font-size: 1em;
  line-height: 1em;
  text-align: center;
  font-weight: bold;
  width: 95%;
  height: 270rpx;
  box-sizing: border-box;
  overflow-x: scroll;
  display: block;
  padding: 20rpx;
}
.content .oInput {
  width: 70%;
  height: 80rpx;
  font-size: 1em;
  padding-left: 25rpx;
  display: block;
  border-radius: 15rpx;
  outline: none;
  background-color: #fff;
  border: 1px solid black;
}
.content .parentBtn {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.content .parentBtn .btn-previous,
.content .parentBtn .btn-next {
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}
/*底部样式*/
.footer {
  width: 100%;
}
.footer .tiNum {
  width: 100%;
  height: 50rpx;
  text-align: center;
  padding-top: 20rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color:rgba(141, 45, 165, .5);
}
.footer #firstAnswer {
  width: 95%;
  height: 600rpx;
  margin: 10rpx auto 0;
  font-weight: bold;
  border-top: 1rpx solid black;
  overflow-x: scroll;
  padding-bottom: 30rpx;
  white-space: pre;
}
