/**index.wxss**/
.inputarea {
  border: 2px solid #ccc;
  padding: 10px;
  margin: 20px;
}

.popup-btn {
  width: 90px;
  height: 34px;
  background-color: #ff8c30;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  margin-bottom:20px
}

.popup {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: flex-start;
  z-index: 100000;
}

.content {
  background-color: white;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}