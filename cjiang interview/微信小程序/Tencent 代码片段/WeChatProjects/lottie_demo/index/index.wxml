<view style="text-align: center;">
  <view wx:if="{{showLoading}}">
    <canvas id="lottie_demo" type="2d" style="display: inline-block; width: 50px; height: 50px;" />
  </view>
  <button bindtap="init" style="width: 300px;">初始化</button>
  <button bindtap="play" style="width: 300px;">播放</button>
  <button bindtap="pause" style="width: 300px;">暂停</button>
  <button bindtap="show" style="width: 300px;">显示</button>
  <button bindtap="hide" style="width: 300px;">隐藏</button>
</view>

<custom-loading id="custom-loading" />