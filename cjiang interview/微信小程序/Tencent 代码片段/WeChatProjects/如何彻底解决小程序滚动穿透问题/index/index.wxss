.button {
  width: 400rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: #CCC;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 200rpx auto 0;
  display: block;
}

.scrollView {
  width: 100%;
  height: 1000rpx;
  border: 2rpx solid;
  margin: 0 auto;
  background: #FFF;
}

.dialog-wrap {
  width: 100%;
  position: fixed;
  top: 0;
  height: 100%;
  max-width: 750px;
  visibility: hidden;
  z-index: 9999;
  transition: all 0.3s;
}

.dialog-wrap.active {
  visibility: visible;
  transition: all 0.3s;
}

.dialog-back {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 888;
  opacity: 0;
  max-width: 750px;
  transition: all 0.3s;
}

.dialog-back.active {
  opacity: 1;
  transition: all 0.3s;
}

.share-box-container {
  width: 622rpx;
  height: 622rpx;
  position: fixed;
  z-index: 999;
  top: 50%;
  margin-left: 64rpx;
  margin-top: -320rpx;
  overflow: visible;
  animation: hideZeroAlert 0.3s ease-in-out forwards;
}

.share-box-container.active {
  animation: showZeroAlert 0.5s ease-in-out forwards;
}

.share-content {
  width: 100%;
  height: 622rpx;
  position: relative;
  background: url('https://qiniu-image.qtshe.com/20210409share_modal.png') no-repeat left center;
  background-size: 100% 622rpx;
}

.share-box {
  width: 100%;
  margin: 120rpx 0 0;
  padding: 0 120rpx;
  display: flex;
  justify-content: space-between;
}

.share-item {
  width: 126rpx;
  margin-bottom: 68rpx;
}

.share-item image {
  width: 126rpx;
  height: 170rpx;
  display: block;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 32rpx auto 0;
}

@keyframes scaleOut {
  0% {
    will-change: transform;
    transform: scale(0.8);
    opacity: 0;
  }

  100% {
    will-change: transform;
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes showZeroAlert {
  0% {
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
  }

  45% {
    -webkit-transform: scale(1.05);
    transform: scale(1.05);
  }

  80% {
    -webkit-transform: scale(0.95);
    transform: scale(0.95);
  }

  100% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

@keyframes hideZeroAlert {
  0% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  45% {
    -webkit-transform: scale(0.95);
    transform: scale(0.95);
  }

  80% {
    -webkit-transform: scale(1.05);
    transform: scale(1.05);
  }

  100% {
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
  }
}